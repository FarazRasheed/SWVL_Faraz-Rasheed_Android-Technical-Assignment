<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="unit"
            type="com.swvl.movies.services.dataModels.movie.Movie" />
        <variable
            name="genres"
            type="String" />
        <variable
            name="cast"
            type="String" />
        <variable
            name="directer"
            type="String" />
        <variable
            name="viewModel"
            type="com.swvl.movies.ui.home.MoviesViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="@dimen/_30sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:id="@+id/ivMedia"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:background="@color/color80000000"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_play_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_125sdp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_250sdp"
                android:id="@+id/cardDesc">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_10sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/gssm_bold"
                        android:id="@+id/tvName"
                        android:gravity="start"
                        android:text="@{unit.title}"
                        android:layout_marginEnd="@dimen/_30sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
<!--                    -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`(`+unit.year+`)`}"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/gssm_medium"
                        android:id="@+id/tvYear"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@+id/tvName"
                        app:layout_constraintTop_toTopOf="@+id/tvName"
                        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{unit.rating+`/10`}"
                        android:drawableTop="@drawable/ic_rating"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/gssm_medium"
                        android:id="@+id/tvRating"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="@+id/tvName"
                        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{120/60+` minutes`+genres}"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/gssm_medium"
                        android:id="@+id/tvTime"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/cast"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/gssm_bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardDesc" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{cast}"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/gssm_medium"
                android:id="@+id/tvCast"
                android:gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@+id/tvLabel"
                app:layout_constraintTop_toBottomOf="@+id/tvLabel"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/dotted"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvCast"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/line1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>